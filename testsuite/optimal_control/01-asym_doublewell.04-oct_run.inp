
Dimensions = 1
fromScratch = yes

CalculationMode = opt_control
RestartDir = "ground_state_restart"
ExperimentalFeatures = yes


# ------------------
# Grid
# ------------------
BoxShape = sphere
Spacing = 0.3
Radius =  10.0


# ------------------
# System
# ------------------
%Species
"ADW1D" | 1 | spec_user_defined | 1 | "1/64*(x)^4-1/4*(x)^2+1/256*(x)^3"
%

%Coordinates
"ADW1D" | 0
%

TheoryLevel = independent_particles


# ------------------
# TD RUN Parameters
# ------------------

stime  = 50.0
dt = 0.01
TDPropagator = exp_mid
TDExponentialMethod = taylor
TDExponentialOrder = 4
TDLanczosTol = 5.0e-5
TDMaximumIter = stime/dt
TDTimeStep = dt


# --------------
# OCT parameters
# --------------

OCTPenalty = 1.0
OCTEps = 0.000001
OCTMaxIter = 1

OCTInitialState = oct_is_groundstate

OCTTargetOperator = oct_tg_userdefined
xf=2.0
%OCTTargetUserdefined
   1 | 1 | 1 | "exp(-(x-xf)^2)"
%



OCTScheme  = oct_algorithm_zbr98
OCTDoubleCheck = no


#----------------------------
# Laser field = Initial guess
#-----------------------------

ampl = 0.01
freq = 0.157

%TDExternalFields
  electric_field | 1 | 0 | 0 | freq | "envelope_function" 
%

%TDFunctions
"envelope_function" | tdf_cw | ampl
%

