P_c = 137.036
%StaticMagneticField
  0 | 0 | P_c*0.0001
%

Output = density + current + potential
OutputHow = axis_y
FlushMessages = yes

%CurrentThroughPlane
  0 | 0
  1 | 0
  0.1
  0 | 70
%

CalculateSelfInducedMagneticField = yes

LCAOStart = no
