CalculationMode = td

Dimensions = 1

FromScratch = YES

ExperimentalFeatures = YES

#############################
# GS
#############################

%Coordinates
"H1D" | 0.0
%

%Species
'H1D' | 1.0079400 | spec_user_defined | 1 | '-1.0/(abs(x)+0.002)'
%

%UserDefinedStates
  1 | 1 | 1 | formula | "sqrt(2)*x*exp(-abs(x))" | normalize_no
%

OnlyUserDefinedInitialStates = YES

BoxShape = sphere
Radius = 15  
Spacing = 0.2

TheoryLevel = independent_particles


#############################
# TD
#############################


dt = 0.008
T = 60

TDTimeStep = dt
TDMaximumIter = T/TDTimeStep



#############################
# PES
#############################
PhotoElectronSpectrum = pes_mask

%PESMaskSize
  5 | Radius
%

PESMaskMode = fullmask_mode
PESMaskPlaneWaveProjection = nfft_map
PESMaskNFFTEnlargeLev = 2

NFFTGuruInterface = YES
NFFTCutoff = 2
NFFTOversampling = 1.1
NFFTPrecompute = NFFT_PRE_PSI


##########################
#LASER
##########################

amplitude = .7763
omega = 1.5

%TDExternalFields
  vector_potential | 1 | 0 | 0 | omega | "ramp"
%

%TDFunctions
 "ramp" | tdf_trapezoidal | amplitude | 50 | 29.3 | 4.2
%


#########################
# OUT
#########################

OutputEvery = 50

