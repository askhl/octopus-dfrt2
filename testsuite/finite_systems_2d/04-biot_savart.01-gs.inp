CalculationMode = gs
Dimensions = 2
FromScratch = yes
BoxShape = sphere
Spacing = 0.07
Radius = 6.0

TheoryLevel = independent_particles

%Species
  "ring" | 1.0 | spec_user_defined | 1 | "-20.0/cosh(10.0*(r-3.0))^2"
%

%Coordinates
  "ring" | 0 | 0 | 0
%

ExtraStates = 1
%Occupations
  0 | 1
  0 | 0 
%
SpinComponents = polarized
EigenSolver = cg_new
EigenSolverTolerance = 1.0e-5
EigenSolverMaxIter = 1000

ConvRelDens = 1.0e-2

