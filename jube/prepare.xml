<preparation>

<prepare cname="c240">
  <input files="input/c240_inp input/c240.xyz input/c240.tar.bz2" />
  <command>
    cd $rundir;
    tar -xf `ls *.exe`;
    mv *inp inp;
    tar -jxf c240*.bz2;
    rm -f c240*.bz2;
  </command>
</prepare>

